- if @search_result.present?
  %section.houses-block.table-view
    .container
      - if header.present?
        %p.light-h2= header
      %table.table.table-striped
        %thead
          %tr
            %th Фото
            %th= sortable_column('title')
            %th= sortable_column('distance')
            %th= sortable_column('capacity')
            %th= sortable_column('price_bd')
            %th= sortable_column('price_wd')
            %th
        %tbody
          = render partial: 'search/table_row', collection: @search_result.estimates
      = paginate @search_result.estimates
