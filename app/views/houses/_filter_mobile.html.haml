    .row
      %nav.navbar.navbar-inverse.navbar-categories{role: "navigation"}
        .container
          %button.navbar-toggle.pull-left.collapsed{type: "button", data: {toggle: "collapse", target: ".collapse-categories"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %button.btn.btn-success.btn-filter-collapse.collapsed{type: "button", role: "filter-collapse-mobile", data: {toggle: "collapse", target: "#filter"} }
            %span.fontello-icon-list-1
