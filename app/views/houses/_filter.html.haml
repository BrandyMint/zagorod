= simple_form_for @search_form, url: search_url, method: :get, :html => {id: 'filter', class: 'collapse in', role: "form"} do |f|
  .page-filter
    .container
      .row
        .col-md-12
          = f.error_notification
          .form-group.col-md-2
            .row
              = f.label :date_from, class: 'col-xs-2'
              .col-xs-10.col-md-12
                = f.input_field :date_from, as: :date_picker, class: 'form-control', placeholder: I18n.l(Date.today, format: :words), type: "text"
          .form-group.col-md-2
            .row
              = f.label :date_to, class: 'col-xs-2'
              .col-xs-10.col-md-12
                = f.input_field :date_to, as: :date_picker, class: 'form-control', placeholder: I18n.l(Date.tomorrow, format: :words), type: "text"
          .form-group.col-md-1
            .row
              = f.label :people_quantity, class: 'col-xs-2'
              .col-xs-4.col-md-12
                = f.input_field :people_quantity, collection: people_quantity_collection, include_blank: false, class: 'form-control'
          .form-group.col-md-3
            .row.form-inline
              = f.label :price_to, class: 'col-xs-2'
              .col-xs-7.col-md-12
                .form-group
                  = f.input_field :price_to, collection: prices_collection, include_blank: false, class: 'form-control'
          .form-group.col-md-2.col-md-offset-2.visible-md.visible-lg
            .row
              .col-xs-12.text-right
                %button.btn.btn-default.btn-lg.btn-filter-comfort{type: "button", data: {toggle: 'collapse', target: "#comfort-list", text: 'скрыть удобства'} } выбрать удобства
          %p.clearfix
          .row#comfort-list.collapse
            - ActsAsTaggableOn::Tag.distinct.find_in_batches(batch_size: 3) do |tags|
              -#.visible-md.visible-lg
              .col-xs-6.col-md-2
                - tags.each do |tag|
                  %input{id: "Checkbox#{tag.id}", name: "search_form[comfort][]", type: "checkbox", value: "#{tag}"}/
                  %label.checkbox{for: "Checkbox#{tag.id}"}
                    %span
                    = tag
  .container
    .row
      .col-xs-12.col-md-4.col-md-offset-4
        = f.submit 'Найти', class: 'btn btn-success bold btn-block btn-filter', data: {disable_with: 'Ищу...'}
